@using System.Globalization
@model SpotifyShuffler.Database.SpotifyAccount

@{
    Layout = "_SettingsLayout";
}

<h1 class="h3">
    Spotify Account
</h1>

<div class="m-3">
    <div class="form-group">
        <label class="form-text">Spotify Account</label>
        <input type="text" class="form-control" placeholder="@Model.SpotifyId" readonly/>
    </div>

    <div class="form-group">
        <label class="form-text">Username</label>
        <input type="text" class="form-control" placeholder="@Model.Name" readonly/>
    </div>

    <div class="form-group">
        <label class="form-text">Email Address</label>
        <input type="text" class="form-control" placeholder="@Model.EmailAddress" readonly/>
    </div>

    <div class="form-group">
        <label class="form-text">Country</label>

        @{
            RegionInfo region = new RegionInfo(Model.Country);
            <input type="text" class="form-control" placeholder="@($"{region.EnglishName} ({region.TwoLetterISORegionName})")" readonly/>
        }
    </div>

    <div class="form-group">
        <label class="form-text">Account Type</label>
        <input type="text" class="form-control" placeholder="@Model.AccountType" readonly/>
    </div>
</div>