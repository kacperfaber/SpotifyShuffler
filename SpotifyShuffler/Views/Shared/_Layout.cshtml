@model SpotifyShuffler.Models.LayoutModel

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Title</title>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="/libs/js/bootstrap.min.js"></script>
    <link href="/libs/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>

    <style>
            .navbar-nav > li 
            {
            position: relative;
            display: block;
            }
    </style>

</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
    <a href="@Url.ActionLink("Home", "Home")" class="navbar-brand">
        @Model.Title
    </a>

    <div class="collapse navbar-collapse">
        @await Html.PartialAsync("_CurrentUserController", Model.CurrentUser)
    </div>
</nav>

@RenderBody()

</body>
</html>