@model SpotifyShuffler.Database.EmailAddress

<h1 class="h3">
    Email Address
</h1>

@if (Model == null)
{
    <div class="form-group">
        <label>Are you have any email address.</label>
    </div>
    
    @Html.ActionLink("CreateEmail", "CreateEmail", "CreateEmailAddress", new {}, new {@class = "btn btn-primary"})
}

else
{
    <div class="form-group">
        <label>Email Address</label>
        <input type="text" class="form-control" placeholder="@Model.Email" readonly>
    </div>

    <div class="form-group">
        <label>Is Confirmed</label>
        <input type="text" class="form-control" placeholder="@(Model.IsConfirmed ? "Yes" : "No")" readonly>
    </div>

    @if (!Model.IsConfirmed)
    {
        <a href="#" class="btn btn-secondary">Confirm Email</a>
    }

    @Html.ActionLink("Delete", "Delete", "DeleteEmailAddress", new {}, new {@class = "btn btn-danger"})
}