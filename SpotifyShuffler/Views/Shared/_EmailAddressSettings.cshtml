@model SpotifyShuffler.Database.EmailAddress

<h1 class="h3">
    Email Address
</h1>

<div class="m-3">
    @if (Model == null)
    {
        @Html.ActionLink("Create Email", "CreateEmail", "CreateEmailAddress", new {}, new {@class = "btn btn-primary"})
    }
    
    else
    {
        <div class="form-group">
            <label>Email Address</label>
            <input type="text" class="form-control" placeholder="@Model.Email" readonly>
        </div>
    
        <div class="form-group">
            <label>Is Confirmed</label>
            @if (Model.IsConfirmed)
            {
                <label class="form-text">Yes, at @Model.ConfirmedAt.Value.ToString("g")</label>
            }
    
            else
            {
                <label class="form-text">No, @Html.ActionLink("Confirm Now", "Confirm", "ConfirmEmailAddress")</label>
            }
        </div>
    
        @if (!Model.IsConfirmed)
        {
            <a href="#" class="btn btn-secondary">Confirm Email</a>
        }
    
        @Html.ActionLink("Delete", "Delete", "DeleteEmailAddress", new {}, new {@class = "btn btn-danger"})
    }
</div>