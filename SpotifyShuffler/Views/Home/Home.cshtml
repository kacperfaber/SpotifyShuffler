@using SpotifyShuffler.Interface
@model SpotifyShuffler.Models.HomeModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-10 col-xl-8 offset-xl-2 offset-md-1">
            <h1 class="h2">
                Playlists
            </h1>
            <div class="card-deck">
                @foreach (SimpleSpotifyPlaylist playlist in Model.SpotifyPlaylists)
                {
                    <div class="card float-left">
                        <div class="card-body">
                            <h5 class="card-title">
                                @playlist.Name
                            </h5>
                            <p class="card-text">
                                @playlist.Description
                            </p>
                            @Html.ActionLink("Shuffle", "BeginNewOperation", "Operation", new {playlist_id = playlist.Id}, new {@class = "btn btn-primary"})
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
</body>
</html>