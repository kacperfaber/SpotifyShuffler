@model SpotifyShuffler.Models.ConfirmEmailModel

@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-xl-8 col-md-10 offset-xl-2 offset-md-1">
            <h1 class="h3">Confirm your email.</h1>
            
            @using (Html.BeginForm("ConfirmEmailPost", "ConfirmEmailAddress", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.Email)
                
                <div class="form-group">
                    <label class="form-text">Email Address</label>
                    @(Model.Email)
                </div>
                
                <div class="form-group">
                    <label class="form-text">Confirmation Code</label>
                    @Html.TextBoxFor(x => x.Code, new {@class = "form-control"})
                    @Html.ValidationMessageFor(x => x.Code, "", new {@class = "text-danger"})
                </div>
                
                <input type="submit" class="btn btn-primary" value="Confirm"/>
            }
        </div>
    </div>
</div>
