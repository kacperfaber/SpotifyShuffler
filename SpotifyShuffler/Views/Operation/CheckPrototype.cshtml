@using SpotifyShuffler.Database
@model SpotifyShuffler.Models.CheckPrototypeModel

@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 col-xl-8 col-xs-12 offset-xl-2 offset-md-1">
            <table class="table table-striped table-light">
                <thead>
                <th>
                    #
                </th>
                <th>
                    Name
                </th>
                <th>
                    Artist
                </th>
                <th>
                    Album
                </th>
                </thead>
                <tbody>
                @foreach (TrackPrototype proto in Model.Prototype.Tracks.OrderBy(x => x.Index))
                {
                    <tr>
                        <td>
                            @proto.Index
                        </td>
                        <td>
                            @proto.Name
                        </td>
                        <td>
                            @proto.Author
                        </td>
                        <td>
                            @proto.Album
                        </td>
                    </tr>
                }
                </tbody>
            </table>

            @if (Model.PlaylistIsCollaborative)
            {
                @Html.ActionLink("Ok", "ConfigureOperationKind", "Operation", new {playlist_id = Model.PlaylistId, operation_id = Model.OperationId}, new {@class = "btn btn-primary d-inline"})
            }

            else
            {
                @Html.ActionLink("Ok", "ConfigureYourPlaylist", "Operation", new {playlist_id = Model.PlaylistId, operation_id = Model.OperationId}, new {@class = "btn btn-primary d-inline"})
            }
        </div>
    </div>
</div>